#!/command/with-contenv bashio
# shellcheck shell=bash
# ==============================================================================
# Home Assistant Community Add-on: N8N
# Runs N8N script
# ==============================================================================

bashio::log.info "Starting N8N..."

export N8N_PATH="$(bashio::addon.ingress_entry)/"
export VUE_APP_URL_BASE_API="$(bashio::addon.ingress_entry)/"
export N8N_USER_MANAGEMENT_DISABLED=true
export N8N_USER_FOLDER="/config/n8n/data"
export N8N_CONFIG_FILES=/config/n8n/config.json

exec n8n start
